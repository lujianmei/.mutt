set editor='emacsclient'
#set editor="emacsclient -a \"\" -t"

# Send Options ---------------------------------------
set from          = "lu.jianmei@trs.com.cn"
set sendmail      = "/usr/bin/msmtp -a trs"
set sendmail_wait = 1

# Status Bar -----------------------------------------
set status_chars  = " *%A"
set status_format = "───[ Folder: %f ]───[%r%m messages%?n? (%n new)?%?d? (%d to delete)?%?t? (%t tagged)? ]───%>─%?p?( %p postponed )?───"

